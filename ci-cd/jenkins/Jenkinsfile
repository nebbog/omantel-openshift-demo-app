pipeline {
 agent {
    kubernetes {
      cloud 'openshift'
      yaml """
        apiVersion: v1
        kind: Pod
        spec:
          serviceAccountName: jenkins-agent
          containers:
          - name: builder
            image: nebbog/builder:1.5.0
            command:
            - cat
            tty: true
            volumeMounts:
            - name: home-volume
              mountPath: /home/jenkins
            env:
            - name: HOME
              value: /home/jenkins
          volumes:
          - name: home-volume
            emptyDir: {}
       """
    }
  }

  stages {
 
   stage('Build Java project - demo-app') {
     steps{
       container('builder') {
         script {
           sh 'cd ci-cd;./build.sh'
         }
       }
     }
   }

  stage('Preparing demo-app for tomcat image') {
     steps{
       container('builder') {
         script {
           sh 'cd ci-cd/docker;./prepare-app-for-image.sh'
         }
       }
     }
   }

  openshiftBuild(namespace: 'nebbog-dev', buildConfig: 'my-demo-app-image', showBuildLogs: 'true')

   
 }
}
