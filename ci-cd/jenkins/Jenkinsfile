pipeline {
 agent {
    kubernetes {
      cloud 'openshift'
      yaml """
        apiVersion: v1
        kind: Pod
        spec:
          serviceAccountName: jenkins-agent
          containers:
          - name: jnlp
            image: jenkins/inbound-agent
            volumeMounts:
            - name: home-volume
              mountPath: /home/jenkins
            env:
            - name: HOME
              value: /home/jenkins
          - name: builder
            image: nebbog/builder:1.3.0
            command:
            - cat
            tty: true
          volumes:
          - name: home-volume
            emptyDir: {}
       """
    }
  }

  stages {
 
   stage('Build Java project - demo-app') {
     steps{
       script {
         sh 'cd ci-cd;./build.sh'
       }
     }
   }
   
 }
}
